{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Related</th>
                <th>Type</th>
                <th>Title</th>
                <th>Content</th>
                <th>Status</th>
                <th>Timestamp</th>
                <th>Lasteditedtimestamp</th>
                <th>Votes</th>
                <th>Urltitle</th>
                <th>Publickey</th>
                <th>Views</th>
                <th>Tag</th>
                <th>Flags</th>
                <th>Notify</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.related }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.timestamp %}{{ entity.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastEditedTimestamp %}{{ entity.lastEditedTimestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.votes }}</td>
                <td>{{ entity.urlTitle }}</td>
                <td>{{ entity.publicKey }}</td>
                <td>{{ entity.views }}</td>
                <td>{{ entity.tag }}</td>
                <td>{{ entity.flags }}</td>
                <td>{{ entity.notify }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
