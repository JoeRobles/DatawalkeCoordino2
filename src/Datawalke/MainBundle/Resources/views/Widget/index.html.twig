{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Widget list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Page</th>
                <th>Location</th>
                <th>Title</th>
                <th>Content</th>
                <th>Global</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('widget_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.page }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.global }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('widget_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('widget_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('widget_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
